{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GlennonGames/Organisation/Core/names/organisation_v1.0.0.schema.json",
    "title": "organisation",
    "description": "Describe an organisation",
    "type": "object",
    "required": ["id", "ref_name", "ref_teams"],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "pattern": "^.*organisation_v\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}\\.schema\\.json$"
        },
        "ref_name": { "$ref": "id_v1.0.0.schema.json#/$defs/NameId" },
        "ref_teams": {
            "type": "array",
            "items": { "$ref": "id_v1.0.0.schema.json#/$defs/MemberId" },
            "uniqueItems": true
        }
    }
}