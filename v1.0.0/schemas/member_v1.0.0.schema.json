{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GlennonGames/Organisation/Core/names/member_v1.0.0.schema.json",
    "title": "member",
    "description": "Describe team members",
    "type": "object",
    "required": ["id", "ref_name", "ref_handles"],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "pattern": "^.*member_v\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}\\.schema\\.json$"
        },
        "id": { "$ref": "id_v1.0.0.schema.json#/$defs/MemberId" },
        "ref_name": { "$ref": "id_v1.0.0.schema.json#/$defs/NameId" },
        "ref_handles": {
            "type": "array",
            "items": { "$ref": "id_v1.0.0.schema.json#/$defs/HandleId" },
            "uniqueItems": true
        }
    }
}