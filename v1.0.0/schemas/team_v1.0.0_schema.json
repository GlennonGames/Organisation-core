{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GlennonGames/Organisation/Core/names/team_v1.0.0.schema.json",
    "title": "team",
    "description": "Describe members of a team",
    "type": "object",
    "required": ["id", "ref_name", "ref_members"],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "pattern": "^.*team_v\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}\\.schema\\.json$"
        },
        "ref_name": { "$ref": "id_v1.0.0.schema.json#/$defs/NameId" },
        "ref_members": {
            "type": "array",
            "items": { "$ref": "id_v1.0.0.schema.json#/$defs/MemberId" },
            "uniqueItems": true
        }
    }
}